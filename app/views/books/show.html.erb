<p id="notice"><%= notice %></p>

<p>
  <strong>Book name:</strong>
  <%= @book.book_name %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Price:</strong>
  <%= @book.price %>
</p>

<% if @book.borrowed %>
	<p>
	  <strong>Borrowed by:</strong>
	  <%= @book.user_id %>
	</p>
<% end %>

<% if current_user.admin %>
<%= link_to 'Edit', edit_book_path(@book) %>
<% end %>

<%= link_to 'Back', books_path %>
